    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Server",
            "skipFiles": [
                "${workspaceFolder}/server/<node_internals>/**"
            ],
            "cwd": "${workspaceFolder}/server",
            "program": "${workspaceFolder}/server/main.ts",
            "outFiles": [
                "${workspaceFolder}/server/src/transpiler/*.js"
            ],
            "preLaunchTask": "tsc: build - server/tsconfig.json"
        }
    ]
}